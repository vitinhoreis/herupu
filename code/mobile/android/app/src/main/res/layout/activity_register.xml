<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdeefd"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/txv_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"
        android:fontFamily="serif"
        android:textSize="40sp"
        android:textStyle="normal"
        android:textColor="#44012c"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txv_email_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:textColor="#44012c"
        app:layout_constraintTop_toBottomOf="@id/txv_cadastro"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@id/txv_cadastro"
        />

    <EditText
        android:id="@+id/edt_email_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu e-mail"
        android:fontFamily="serif"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txv_email_cadastro"
        app:layout_constraintStart_toStartOf="@+id/txv_cadastro"
        android:textColorHint="#44012c"
        android:backgroundTint="#44012c"
        />

    <TextView
        android:id="@+id/txv_senha_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:textColor="#44012c"
        app:layout_constraintTop_toBottomOf="@id/edt_email_cadastro"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/txv_cadastro"
        />

    <EditText
        android:id="@+id/edt_senha_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:fontFamily="serif"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txv_senha_cadastro"
        app:layout_constraintStart_toStartOf="@+id/txv_cadastro"
        android:textColorHint="#44012c"
        android:backgroundTint="#44012c"
        />

    <Button
        android:id="@+id/btn_cadastro"
        style="@style/Widget.Material3.Button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edt_senha_cadastro"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/edt_senha_cadastro"
        app:layout_constraintEnd_toEndOf="@id/edt_senha_cadastro"
        android:textColor="#fdeefd"
        android:backgroundTint="#44012c"
        />

</androidx.constraintlayout.widget.ConstraintLayout>